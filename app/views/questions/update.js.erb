<% if @question.errors.present? %>
<% @question.errors.full_messages.each do |message| %>
$('.question-errors').html('<%= j message %>')
<% end %>
<% else %>
$('#<%= @question.id %>').replaceWith('<%= j render :partial =>  'question', locals: {question: @question} %>')
$('.edit-question-link').click(function(e){
    e.preventDefault();
    $(this).hide();
    question_id = $(this).data('question-id');
    $('form#edit_question_' + question_id).show();
});
<% end %>