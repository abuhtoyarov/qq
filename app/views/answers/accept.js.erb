<% if @answer.errors.present? %>
<% @answer.errors.full_messages.each do |message| %>
$('.answer-errors').html('<%= j message %>')
<% end %>
<% else %>

$('.panel-success').removeClass('panel-success')
$('.row .panel').addClass('panel-default')

$('#answer<%= @answer.id %>').prependTo('.answers')
$('#answer<%= @answer.id %>').replaceWith('<%= j render :partial =>  'questions/answer', locals: {answer: @answer} %>')
<% end %>